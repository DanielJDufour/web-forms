{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/eyelidlessness/odk-web-forms"
  },
  "engines": {
    "node": ">=18 <21",
    "yarn": "1.22.19"
  },
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "build": "turbo run build --filter=\"@odk/*\"",
    "build:ci": "turbo run build:ci --filter=\"@odk/*\"",
    "dev": "turbo run dev --concurrency=40 --parallel --filter=\"@odk/*\"",
    "format": "yarn format:code",
    "format:code": "prettier -w \"**/*\" --ignore-unknown --cache",
    "format:imports": "organize-imports-cli ./packages/*/tsconfig.json",
    "test": "turbo run test --concurrency=1 --filter=\"@odk/*\"",
    "lint": "eslint . --report-unused-disable-directives",
    "version": "changeset version && node ./scripts/deps/update-example-versions.js && yarn install && yarn format"
  },
  "type": "module",
  "version": "0.0.0",
  "volta": {
    "node": "20.8.0",
    "yarn": "1.22.19"
  },
  "workspaces": [
    "packages/*",
    "scripts"
  ],
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@types/node": "^20.8.4",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-no-only-tests": "^3.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "only-allow": "^1.2.1",
    "organize-imports-cli": "^0.10.0",
    "prettier": "^3.0.3",
    "turbo": "^1.10.15",
    "typescript": "~5.2.2"
  }
}
