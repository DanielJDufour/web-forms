<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms"
  xmlns:ev="http://www.w3.org/2001/xml-events"
  xmlns:h="http://www.w3.org/1999/xhtml"
  xmlns:jr="http://openrosa.org/javarosa"
  xmlns:orx="http://openrosa.org/xforms/"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>Basic calculate</h:title>
    <model>
      <instance>
        <root id="basic-calculate">
          <first-question>1</first-question>
          <second-question/>
          <meta>
            <instanceID/>
          </meta>
        </root>
      </instance>
      <bind nodeset="/root/first-question"/>
      <bind nodeset="/root/second-question" calculate="/root/first-question * 2"/>
      <bind nodeset="/root/meta/instanceID" type="string"/>
    </model>
  </h:head>
  <h:body>
    <input ref="/root/first-question">
      <label>First question (default = 1)</label>
    </input>
    <input ref="/root/second-question">
      <label>Second question (first-question * 2)</label>
    </input>
  </h:body>
</h:html>
